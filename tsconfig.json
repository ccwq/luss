{
    "compilerOptions": {
        "declaration": true,
        "declarationMap": false,
        "outDir": "./dist",
        "target": "esnext",
        "useDefineForClassFields": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "lib": [
            "es2015",
            "dom"
        ],
        "skipLibCheck": true
    },
    "include": [
        "src/**/*.ts"
    ]
}
